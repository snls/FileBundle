{% extends 'base.html.twig' %}

{% block title %}FileUpload List{% endblock %}
{% block body %}
    <h2>Список файлов <small><a href="/file/create">добавить</a></small> </h2>
    <div class="images">
        {% for file in files %}
            <img src="{{ asset('uploads/files/images/' ~ file.preview) }}" class="image">
        {% endfor %}
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        img.image {
            width: 200px;
            border: 1px solid darkgrey;
            border-radius: 10px;
        }
    </style>
{% endblock %}

